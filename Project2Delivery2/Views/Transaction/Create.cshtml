@model Transaction

@{
    ViewBag.Title = "Create Transaction";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Create New Transaction</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TransactionRef" class="form-label"></label>
                            <input asp-for="TransactionRef" class="form-control" placeholder="TXN007" />
                            <span asp-validation-for="TransactionRef" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="AccountId" class="form-label">Account</label>
                            <select asp-for="AccountId" class="form-select" asp-items="ViewBag.Accounts">
                                <option value="">-- Select Account Holder --</option>
                            </select>
                            <span asp-validation-for="AccountId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MerchantId" class="form-label">Merchant</label>
                            <select asp-for="MerchantId" class="form-select" asp-items="ViewBag.Merchants">
                                <option value="">-- Select Merchant --</option>
                            </select>
                            <span asp-validation-for="MerchantId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="DeviceId" class="form-label">Device</label>
                            <select asp-for="DeviceId" class="form-select" asp-items="ViewBag.Devices">
                                <option value="">-- Select Device --</option>
                            </select>
                            <span asp-validation-for="DeviceId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Amount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" type="number" step="0.01" class="form-control" min="0.01" placeholder="100.00" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Currency" class="form-label"></label>
                            <select asp-for="Currency" class="form-select">
                                <option value="">-- Select Currency --</option>
                                <option value="USD">USD - US Dollar</option>
                                <option value="EUR">EUR - Euro</option>
                                <option value="GBP">GBP - British Pound</option>
                                <option value="CAD">CAD - Canadian Dollar</option>
                            </select>
                            <span asp-validation-for="Currency" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="">-- Select Status --</option>
                            <option value="Completed">Completed</option>
                            <option value="Pending">Pending</option>
                            <option value="Flagged">Flagged</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle"></i> Create Transaction
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}