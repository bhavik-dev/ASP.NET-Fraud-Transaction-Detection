@{
    ViewBag.Title = "Edit Role";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Edit Role</h3>
            </div>
            <div class="card-body">

                <div class="alert alert-light border mb-4">
                    <strong>Current Role:</strong> <span class="badge bg-primary">@ViewBag.RoleName</span>
                </div>

                <form asp-action="Edit" method="post">
                    <input type="hidden" name="oldRoleName" value="@ViewBag.RoleName" />

                    <div class="mb-3">
                        <label for="newRoleName" class="form-label">New Role Name</label>
                        <input type="text" name="newRoleName" class="form-control" value="@ViewBag.RoleName" required />
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>