@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>

@{
    ViewBag.Title = "Role Management";
}

<div class="row mb-4">
    <div class="col">
        <h2 class="display-5">🔐 Role Management</h2>
        <p class="lead text-muted">Manage application roles and permissions</p>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Role
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light border-bottom">
        <h5 class="mb-0">System Roles</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Role Name</th>
                        <th>Role ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>
                                <strong>@role.Name</strong>
                                @if (role.Name == "Admin")
                                {
                                    <span class="badge bg-danger ms-2">Super User</span>
                                }
                                else if (role.Name == "Analyst")
                                {
                                    <span class="badge bg-primary ms-2">Staff</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary ms-2">Standard</span>
                                }
                            </td>
                            <td><code class="small">@role.Id</code></td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="ManageUsers" asp-route-roleName="@role.Name" class="btn btn-sm btn-outline-primary">
                                        👥 Manage Users
                                    </a>
                                    <a asp-action="Edit" asp-route-roleName="@role.Name" class="btn btn-sm btn-outline-secondary">
                                        ✏️ Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>