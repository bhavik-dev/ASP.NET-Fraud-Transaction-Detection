@model RoleUsersViewModel

@{
    ViewBag.Title = "Manage Users in Role";
}

<div class="row mb-4">
    <div class="col">
        <h2 class="display-5">Manage Users in Role: <span class="text-primary">@Model.RoleName</span></h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Roles</a></li>
                <li class="breadcrumb-item active">@Model.RoleName</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm border-success">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">👥 Users in @Model.RoleName Role (@Model.UsersInRole.Count)</h5>
            </div>
            <div class="card-body">
                @if (Model.UsersInRole.Any())
                {
                    <ul class="list-group">
                        @foreach (var user in Model.UsersInRole)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@user.UserName</strong><br />
                                    <small class="text-muted">@user.Email</small><br />
                                    <small class="text-muted">Full Name: @user.FullName</small>
                                </div>
                                <form asp-action="RemoveUserFromRole" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <input type="hidden" name="roleName" value="@Model.RoleName" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Remove @user.UserName from @Model.RoleName role?')">
                                        Remove
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted text-center py-3">No users assigned to this role yet.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-light border-bottom">
                <h5 class="mb-0">Available Users (@Model.AvailableUsers.Count)</h5>
            </div>
            <div class="card-body">
                @if (Model.AvailableUsers.Any())
                {
                    <ul class="list-group">
                        @foreach (var user in Model.AvailableUsers)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@user.UserName</strong><br />
                                    <small class="text-muted">@user.Email</small>
                                </div>
                                <form asp-action="AddUserToRole" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <input type="hidden" name="roleName" value="@Model.RoleName" />
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        + Add
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted text-center py-3">All users are already in this role.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        ← Back to Roles
    </a>
</div>