@{
    ViewBag.Title = "Security Demo - Open Redirect";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-light text-dark border-bottom">
                <h3 class="mb-0">Open Redirect Security Demo</h3>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="card border-danger shadow-sm">
                            <div class="card-header bg-light border-bottom text-danger">
                                <strong>Vulnerable Code</strong>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <a href="/SecurityDemo/VulnerableRedirect?returnUrl=/Transaction/Index" class="btn btn-outline-success">
                                        Test Local URL
                                    </a>
                                    <a href="/SecurityDemo/VulnerableRedirect?returnUrl=https://google.com" class="btn btn-outline-danger">
                                        Test External URL
                                    </a>
                                </div>
                                <p class="text-muted small mt-2 mb-0">External link will redirect to Google</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="card border-success shadow-sm">
                            <div class="card-header bg-light border-bottom text-success">
                                <strong>Secure Code</strong>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <a href="/SecurityDemo/SecureRedirect?returnUrl=/Transaction/Index" class="btn btn-outline-success">
                                        Test Local URL
                                    </a>
                                    <a href="/SecurityDemo/SecureRedirect?returnUrl=https://google.com" class="btn btn-outline-danger">
                                        Test External URL
                                    </a>
                                </div>
                                <p class="text-muted small mt-2 mb-0">External link will be blocked</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>