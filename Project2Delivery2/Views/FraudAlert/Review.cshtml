@model FraudAlert

@{
    ViewBag.Title = "Review Alert";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-sm">
            <div class="card-header bg-light border-bottom">
                <h3 class="mb-0">Review Fraud Alert - #@Model.AlertId</h3>
            </div>
            <div class="card-body">
@if (Model.Transaction != null)
{
                    <div class="alert alert-light border mb-4" role="alert">
                        <h5 class="alert-heading">Transaction Summary</h5>
                        <p class="mb-0 text-muted">
                            <strong>Reference:</strong> @Model.Transaction.TransactionRef |
                            <strong>Amount:</strong> @Model.Transaction.Amount.ToString("C") |
                            <strong>Merchant:</strong> @Model.Transaction.Merchant.Name
                        </p>
                    </div>
}

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card border shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-muted">Current Alert Status</h5>
                                <p><strong>Alert Level:</strong> <alert-level level="@Model.AlertLevel"></alert-level></p>
                                <p><strong>Current Status:</strong> <status-badge status="@Model.Status"></status-badge></p>
                                <p class="mb-0"><strong>Created:</strong> <span class="text-muted">@Model.CreatedAt.ToString("F")</span></p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card bg-light border shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-muted">Review Guidelines</h5>
                                <ul class="mb-0 text-muted">
